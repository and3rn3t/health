# npm configuration for better package management and security

# Save exact versions by default for consistency
save-exact=true

# Use npm registry (explicit for clarity)
registry=https://registry.npmjs.org/

# Audit settings for security
audit-level=moderate
fund=false

# Package installation preferences
prefer-offline=false
cache-max=86400000

# Progress and logging
progress=false
loglevel=warn

# Security settings
package-lock=true

# Engine compatibility
engine-strict=true

# Development optimizations
optional=false
