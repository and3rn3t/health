# Xcode Build Configuration for Performance
# Place this in your project root and reference in build settings

# Swift Compiler Performance Settings
SWIFT_COMPILATION_MODE = wholemodule
SWIFT_OPTIMIZATION_LEVEL = -O
SWIFT_WHOLE_MODULE_OPTIMIZATION = YES

# Build System Performance
COMPILER_INDEX_STORE_ENABLE = NO
ENABLE_INCREMENTAL_DISTILL_INSTALL = YES
ENABLE_DEFAULT_SEARCH_PATHS = YES

# Debug Information Format (faster linking)
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym

# Code Signing (disable for simulator builds)
CODE_SIGNING_REQUIRED = NO
CODE_SIGNING_ALLOWED = NO

# Deployment Settings
SKIP_INSTALL = YES
DEPLOYMENT_POSTPROCESSING = NO

# Parallel Build Settings
ARCHS = $(ARCHS_STANDARD)
VALID_ARCHS = arm64 x86_64

# Indexing Performance
COMPILER_INDEX_STORE_ENABLE = NO
ENABLE_BITCODE = NO

# Swift Settings for Development Speed
SWIFT_ACTIVE_COMPILATION_CONDITIONS = DEBUG SIMULATOR
SWIFT_INSTALL_OBJC_HEADER = NO