# Testing Configuration
# Place this in your test target's Bundle Resources

# Test Environment Variables
TEST_HOST_URL=http://127.0.0.1:8789
TEST_WEBSOCKET_URL=ws://localhost:3001
TEST_TIMEOUT=30

# Mock Configuration
MOCK_HEALTHKIT_DATA=YES
MOCK_API_RESPONSES=NO
MOCK_WEBSOCKET_RESPONSES=NO

# Performance Test Thresholds
MAX_MEMORY_USAGE_MB=100
MAX_CPU_USAGE_PERCENT=80
MAX_RESPONSE_TIME_MS=2000
MAX_STARTUP_TIME_MS=5000

# Coverage Thresholds
MIN_CODE_COVERAGE_PERCENT=80
MIN_FUNCTION_COVERAGE_PERCENT=75

# Test Data
TEST_USER_ID=test-user-123
TEST_DEVICE_TOKEN=test-device-token-456
TEST_API_KEY=test-api-key-789

# Debugging
LOG_LEVEL=DEBUG
ENABLE_TEST_LOGGING=YES
CAPTURE_SCREENSHOTS=YES
SAVE_TEST_ARTIFACTS=YES
