# EditorConfig for HealthKit Bridge
# Ensures consistent coding styles across different editors and IDEs

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{swift,h,m}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{json,plist}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2
