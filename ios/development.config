# VitalSense Monitor - Development Configuration
# Environment-specific settings for faster development

[development]
# WebSocket configuration for local testing
websocket_url = "ws://localhost:8080/ws"
api_base_url = "http://localhost:3000/api"
enable_debug_logging = true
mock_health_data = true
auto_reconnect = true
connection_timeout = 5.0

# Performance settings
health_data_batch_size = 10
data_sync_interval = 2.0
background_fetch_interval = 300
max_retry_attempts = 3

# Development features
enable_performance_monitoring = true
show_connection_stats = true
enable_test_data_generator = true
log_level = "debug"

[production]
# Production settings
websocket_url = "wss://api.andernet.dev/ws"
api_base_url = "https://api.andernet.dev/api"
enable_debug_logging = false
mock_health_data = false
auto_reconnect = true
connection_timeout = 10.0

# Performance settings
health_data_batch_size = 50
data_sync_interval = 5.0
background_fetch_interval = 600
max_retry_attempts = 5

# Production features
enable_performance_monitoring = false
show_connection_stats = false
enable_test_data_generator = false
log_level = "error"

[testing]
# Testing environment
websocket_url = "ws://test-server:8080/ws"
api_base_url = "http://test-server:3000/api"
enable_debug_logging = true
mock_health_data = true
auto_reconnect = false
connection_timeout = 1.0

# Testing performance settings
health_data_batch_size = 5
data_sync_interval = 0.5
background_fetch_interval = 60
max_retry_attempts = 1

# Testing features
enable_performance_monitoring = true
show_connection_stats = true
enable_test_data_generator = true
log_level = "debug"