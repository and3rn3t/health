# Example environment configuration for VitalSense Monitor
# Copy this to .env and customize for your local development

# API Configuration
API_BASE_URL=http://localhost:3000/api
WEBSOCKET_URL=ws://localhost:8080/ws
API_KEY=your_api_key_here

# Development Settings
DEBUG_LOGGING=true
MOCK_HEALTH_DATA=true
ENABLE_PERFORMANCE_MONITORING=true

# Medical Configuration (Clinical Thresholds)
FALL_RISK_CRITICAL_THRESHOLD=3.5
NORMAL_WALKING_SPEED_MIN=1.2
GAIT_ASYMMETRY_NORMAL_MAX=3.0
ENABLE_CLINICAL_ALERTS=true

# Build Configuration
BUILD_CONFIGURATION=Debug
CODE_SIGN_IDENTITY=iPhone Developer
PROVISIONING_PROFILE=
DEVELOPMENT_TEAM=

# Testing
TEST_DEVICE_NAME=iPhone 15 Pro
TEST_SIMULATOR_OS=iOS 17.0
ENABLE_MOCK_WATCH_DATA=true

# Background Processing
HEALTH_DATA_SYNC_INTERVAL=60
GAIT_MONITORING_INTERVAL=30
BATTERY_OPTIMIZATION_THRESHOLD=20

# Notification Settings
APNS_ENVIRONMENT=development
APNS_KEY_ID=
APNS_TEAM_ID=
ENABLE_FALL_RISK_NOTIFICATIONS=true

# Security
ENCRYPTION_ENABLED=true
DATA_ANONYMIZATION=true
HIPAA_COMPLIANCE_MODE=false

# Optional: External Services
ANALYTICS_KEY=
CRASH_REPORTING_KEY=
MEDICAL_API_ENDPOINT=
HEALTHCARE_PROVIDER_ID=
